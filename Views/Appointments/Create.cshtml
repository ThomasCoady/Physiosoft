@model Physiosoft.Data.Appointment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4 content-area">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientID" class="control-label"></label>
                <select asp-for="PatientID" class ="form-control" asp-items="ViewBag.PatientID"></select>
                <input type="text" id="patientLastName" class="form-control" readonly />
                <div id="patientError" class="text-danger"></div>
            </div>
            <div class="form-group">
                <label asp-for="PhysioID" class="control-label"></label>
                <select asp-for="PhysioID" class ="form-control" asp-items="ViewBag.PhysioID"></select>
                <input type="text" id="physioLastName" class="form-control" readonly />
                <div id="physioError" class="text-danger"></div>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentDate" class="control-label"></label>
                <input asp-for="AppointmentDate" class="form-control" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DurationMinutes" class="control-label"></label>
                <input asp-for="DurationMinutes" class="form-control" />
                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentStatus" class="control-label"></label>
                <input asp-for="AppointmentStatus" class="form-control" />
                <span asp-validation-for="AppointmentStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientIssuse" class="control-label"></label>
                <input asp-for="PatientIssuse" class="form-control" />
                <span asp-validation-for="PatientIssuse" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="HasScans" class="form-check-input" type="checkbox" />
                <label asp-for="HasScans" class="form-check-label"></label>
                <span asp-validation-for="HasScans" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/appointments.js"></script>